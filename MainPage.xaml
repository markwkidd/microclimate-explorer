<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microclimate_Explorer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo_horizontal.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="seedling growing under a cloudy sky" />

            <Label
                Text="Microclimate Explorer"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Closer to nature through science"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Closer to nature through science" />

            <Button 
                Text="Get Location" 
                Clicked="OnGetLocationClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Prompts the user for the location to use" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
