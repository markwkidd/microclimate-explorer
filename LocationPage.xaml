<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microclimate_Explorer.LocationPage">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30,0"
            Spacing="25">

            <HorizontalStackLayout Spacing="25" HorizontalOptions="Center">
                <VerticalStackLayout VerticalOptions="Center">
                    <Label  
                        Text="Welcome! The first step is to enter GPS coordinates for the microclimate you are interested in exploring."
                        VerticalOptions="Center"  
                        HorizontalOptions="Start" 
                        Margin="0,0,0,0" 
                        WidthRequest="400"
                        FontFamily="Arial"
                        FontSize="18" />
                    <Label  
                        Text="There are several options available for entering coordinates. If entering the coordinates manually, use a decimal format (e.g., 37.7749, -80.4194)."
                        VerticalOptions="Center"  
                        HorizontalOptions="Start" 
                        Margin="0,10,0,0" 
                        WidthRequest="400"
                        FontFamily="Arial"
                        FontSize="18" />
                </VerticalStackLayout>
                <Image  
                   Source="logo_horizontal.png"  
                   HeightRequest="185"  
                   Aspect="AspectFit"  
                   SemanticProperties.Description="seedling growing under a cloudy sky" />  
            </HorizontalStackLayout>

            <Label 
                x:Name="LocationResultLabel"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center" />

            <Label 
                Text="Option 1: Request location from this device"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Button
                x:Name="GetLocationBtn"
                Text="Query Device Location" 
                Clicked="OnGetLocationClicked"
                HorizontalOptions="Fill" />

            <Label 
                Text="Option 2: Geocoding"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label Text="Search for GPS coordinates by location name:" />

            <HorizontalStackLayout Spacing="10">
                <Entry 
                    x:Name="LocationNameEntry"
                    Placeholder="Address, Zip Code, City and State, etc."
                    HorizontalOptions="FillAndExpand" />

                <Entry 
                    x:Name="ApiKeyEntry"
                    Placeholder="OpenCage API Key"
                    HorizontalOptions="FillAndExpand" />
                
            </HorizontalStackLayout>

            <Button
                Text="Search for location"
                Clicked="OnGeocodeLocationClicked"
                HorizontalOptions="Fill" />

            <Label 
                Text="Manual GPS coordinate entry"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Entry 
                x:Name="LatitudeEntry"
                Placeholder="Latitude"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Entry 
                x:Name="LongitudeEntry"
                Placeholder="Longitude"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Button
                Text="Use Manual Coordinates"
                Clicked="OnManualLocationClicked"
                HorizontalOptions="Fill" />

            <!-- Weather Station Section -->
            <Label 
                Text="Weather Stations"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="LoadSampleDataBtn"
                Text="Load Sample Weather Data" 
                Clicked="OnLoadSampleDataClicked"
                HorizontalOptions="Fill" />

            <Entry 
                x:Name="WeatherUrlEntry"
                Placeholder="Enter URL of weather data"
                HorizontalOptions="Fill" />

            <Button
                x:Name="ScrapeWebBtn"
                Text="Scrape Web Data" 
                Clicked="OnScrapeWebClicked"
                HorizontalOptions="Fill" />

            <ActivityIndicator 
                x:Name="LoadingIndicator" 
                IsRunning="False" 
                IsVisible="False" 
                HorizontalOptions="Center" />

            <CollectionView 
                x:Name="WeatherStationsCollectionView"
                ItemsSource="{Binding WeatherStations}"
                HeightRequest="300"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" Stroke="LightGray">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Column="0" Grid.Row="0" Text="Station:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding CallSign}" />

                                <Label Grid.Column="0" Grid.Row="1" Text="Temp:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding Temperature, StringFormat='{0}°F'}" />

                                <Label Grid.Column="0" Grid.Row="2" Text="Wind:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="2" Text="{Binding WindSpeed, StringFormat='{0} mph'}" />

                                <Label Grid.Column="0" Grid.Row="3" Text="Humidity:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="3" Text="{Binding Humidity, StringFormat='{0}%'}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
