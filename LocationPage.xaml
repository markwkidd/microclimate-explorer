<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Microclimate_Explorer.LocationPage">

    <ScrollView>
        <VerticalStackLayout 
            Padding="6,0,0,0"
            Spacing="10"
            HorizontalOptions="Start">

            <HorizontalStackLayout
                Spacing="10"
                HorizontalOptions="Start">

                <VerticalStackLayout
                    Spacing="10"                 
                    VerticalOptions="Center">
                    
                    <Label  
                        Text="Welcome! The first step is to determine GPS coordinates for the microclimate you are interested in exploring."
                        VerticalOptions="Center"  
                        HorizontalOptions="Start" 
                        Margin="0,0,0,0" 
                        WidthRequest="400"
                        FontFamily="Arial"
                        FontSize="18" />

                    <Label 
                        Text="Active coordinates:"
                        VerticalOptions="End"  
                        HorizontalOptions="Start" 
                        Margin="0,0,0,0" 
                        WidthRequest="400"
                        FontFamily="Arial"
                        FontSize="24" />

                    <Label 
                        x:Name="LocationResultLabel"
                        Text="None entered"                       
                        VerticalOptions="End"  
                        HorizontalOptions="Start" 
                        Margin="0,0,0,0" 
                        WidthRequest="400"
                        FontFamily="Arial"
                        FontSize="24" />

                    <Button
                        x:Name="NextButton"
                        Text="Next"
                        Clicked="OnNextButtonClicked"
                        WidthRequest="400"
                        HorizontalOptions="Start"
                        VerticalOptions="End"
                        IsEnabled="False" />

                </VerticalStackLayout>

                <Image  
                   Source="logo_horizontal.png"  
                   HeightRequest="185"  
                   Aspect="AspectFit"  
                   SemanticProperties.Description="seedling growing under a cloudy sky" />
            </HorizontalStackLayout>

            <Label  
                  Text="There are several options available for entering coordinates."
                  HorizontalOptions="Start" 
                  Margin="0,10,0,0" 
                  FontFamily="Arial"
                  FontSize="18" />
            <Label 
                Text="Option 1: Manual GPS coordinate entry"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label  
                Text="When entering the coordinates manually, use a decimal format (e.g., 37.77)."
                VerticalOptions="Center"  
                HorizontalOptions="Start" 
                Margin="0,10,0,0" 
                FontFamily="Arial"
                FontSize="18" />

            <Entry 
                x:Name="LatitudeEntry"
                Placeholder="Latitude"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Entry 
                x:Name="LongitudeEntry"
                Placeholder="Longitude"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Button
                Text="Use Manual Coordinates"
                Clicked="OnManualLocationClicked"
                HorizontalOptions="Fill" />
            
            <Label 
                Text="Option 2: Request location from this device"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Button
                x:Name="GetLocationBtn"
                Text="Query Device Location" 
                Clicked="OnGetLocationClicked"
                HorizontalOptions="Fill" />

            <Label 
                Text="Option 3: Geocoding"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label
                Text="Search the OpenCage database by location name with street address. Note: Details like city, state, and country are required." />

            <HorizontalStackLayout
                Spacing="10"/>

            <Entry 
                    x:Name="LocationNameEntry"
                    Placeholder="Location name"
                    HorizontalOptions="FillAndExpand" />

            <Entry 
                    x:Name="ApiKeyEntry"
                    Placeholder="OpenCage API Key"
                    HorizontalOptions="FillAndExpand" />



            <Button
                Text="Search for location"
                Clicked="OnGeocodeLocationClicked"
                HorizontalOptions="Fill" />

            <!-- Weather Station Section -->
            <Label 
                Text="Weather Stations"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry 
                x:Name="WeatherUrlEntry"
                Placeholder="Enter URL of weather data"
                HorizontalOptions="Fill" />

            <Button
                x:Name="ScrapeFindUBtn"
                Text="Query FindU Database" 
                Clicked="OnScrapeFindUClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="LoadSampleDataBtn"
                Text="Load Sample FindU Station Data" 
                Clicked="OnLoadSampleDataClicked"
                HorizontalOptions="Fill" />

            <ActivityIndicator 
                x:Name="LoadingIndicator" 
                IsRunning="False" 
                IsVisible="False" 
                HorizontalOptions="Center" />

            <CollectionView 
                x:Name="WeatherStationsCollectionView"
                ItemsSource="{Binding WeatherStations}"
                HeightRequest="300"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" Stroke="LightGray">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Column="0" Grid.Row="0" Text="Station:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding CallSign}" />

                                <Label Grid.Column="0" Grid.Row="1" Text="Temp:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding Temperature, StringFormat='{0}°F'}" />

                                <Label Grid.Column="0" Grid.Row="2" Text="Wind:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="2" Text="{Binding WindSpeed, StringFormat='{0} mph'}" />

                                <Label Grid.Column="0" Grid.Row="3" Text="Humidity:" FontAttributes="Bold" />
                                <Label Grid.Column="1" Grid.Row="3" Text="{Binding Humidity, StringFormat='{0}%'}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
